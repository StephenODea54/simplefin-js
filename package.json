{
  "name": "simplefin-js",
  "version": "0.0.1",
  "description": "A zero-dependency, type-safe TypeScript SDK for the SimpleFIN Bridge API.",
  "scripts": {
    "dev": "vitest",
    "build": "tsc",
    "ci": "npm run build && npm run check-format && npm run test",
    "check-format": "prettier --check .",
    "format": "prettier --write .",
    "test": "vitest run",
    "local-release": "changeset version && changeset publish",
    "prepublishOnly": "npm run ci"
  },
  "keywords": [
    "simplefin",
    "finance",
    "api",
    "banking",
    "typescript",
    "sdk"
  ],
  "homepage": "https://github.com/stephenodea/simplefin-js",
  "bugs": {
    "url": "https://github.com/stephenodea/simplefin-js/issues"
  },
  "author": "Stephen O'Dea <hey@stephenodea.me> (https://github.com/stephenodea)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stephenodea/simplefin-js.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "dist/index.js",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/node": "^24.10.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  }
}
